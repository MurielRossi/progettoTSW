<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>Bacheca</servlet-name>
        <servlet-class>com.muriel.storytelling.controller.Bacheca</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Bacheca</servlet-name>
        <url-pattern>/Bacheca</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Reaction</servlet-name>
        <servlet-class>com.muriel.storytelling.controller.Reaction</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Reaction</servlet-name>
        <url-pattern>/Reaction</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Story</servlet-name>
        <servlet-class>com.muriel.storytelling.controller.Story</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Story</servlet-name>
        <url-pattern>/Story</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SalvaPost</servlet-name>
        <servlet-class>com.muriel.storytelling.controller.SalvaPost</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SalvaPost</servlet-name>
        <url-pattern>/SalvaPost</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>PostSalvati</servlet-name>
        <servlet-class>com.muriel.storytelling.controller.PostSalvati</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PostSalvati</servlet-name>
        <url-pattern>/PostSalvati</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CancellaStoria</servlet-name>
        <servlet-class>com.muriel.storytelling.controller.CancellaStoria</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CancellaStoria</servlet-name>
        <url-pattern>/CancellaStoria</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RimuoviPostSalvati</servlet-name>
        <servlet-class>com.muriel.storytelling.controller.RimuoviPostSalvati</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RimuoviPostSalvati</servlet-name>
        <url-pattern>/RimuoviPostSalvati</url-pattern>
    </servlet-mapping>
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/WEB-INF/errore.jsp</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/errore.jsp</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/WEB-INF/errore.jsp</location>
    </error-page>
</web-app>